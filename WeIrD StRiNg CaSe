def to_weird_case(string):
    s =[]
    k = 0
    for i in range(len(string)):
        if (k == 0 or k % 2 == 0) and string[i] != " ":
            s.append(string[i].upper())
            k += 1
        else:
            k = 0
            s.append(string [i].lower())
    return ''.join(s)
    
    print(to_weird_case('Weird string case'))
